<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <property global="false" name="id" value="1764321746063"/>
    <property global="false" name="author" value="Ziedelth"/>
    <property global="false" name="crunchyroll-image-no-preview-url" value="https://www.crunchyroll.com/imgsrv/display/thumbnail/1920x1080/catalog/crunchyroll/47409cc6d157b481f2ec50f03ff4ac6e.png"/>

    <changeSet id="${id}-1" author="${author}" dbms="postgresql">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">SELECT COUNT(*)
                                         FROM config
                                         WHERE property_key = 'crunchyroll_default_images'</sqlCheck>
        </preConditions>

        <insert tableName="config">
            <column name="uuid" valueComputed="gen_random_uuid()"/>
            <column name="property_key" value="crunchyroll_default_images"/>
            <column name="property_value" value="${crunchyroll-image-no-preview-url}"/>
        </insert>

        <update tableName="attachment">
            <column name="url" value="https://www.shikkanime.fr/assets/img/episode_no_image_preview.jpg"/>
            <where>url = '${crunchyroll-image-no-preview-url}'</where>
        </update>
    </changeSet>
</databaseChangeLog>