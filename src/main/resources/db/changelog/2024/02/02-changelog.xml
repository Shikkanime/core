<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.25.xsd" objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <property global="false" name="id" value="1706802385683"/>
    <property global="false" name="author" value="Ziedelth"/>

    <changeSet id="${id}-1" author="${author}">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="episode" columnName="description"/>
            </not>
        </preConditions>

        <addColumn tableName="episode">
            <column name="description" type="VARCHAR(1000)"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>