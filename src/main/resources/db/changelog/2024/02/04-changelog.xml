<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.25.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <property global="false" name="id" value="1707476781131"/>
    <property global="false" name="author" value="Ziedelth"/>

    <changeSet id="${id}-1" author="${author}" dbms="!h2">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">SELECT COUNT(*)
                                         FROM config
                                         WHERE property_key = 'fetch_old_episode_description_size'</sqlCheck>
        </preConditions>

        <insert tableName="config">
            <column name="uuid" valueComputed="gen_random_uuid()"/>
            <column name="property_key" value="fetch_old_episode_description_size"/>
            <column name="property_value" value="2"/>
        </insert>
    </changeSet>
</databaseChangeLog>